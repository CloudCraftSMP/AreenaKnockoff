{{ > templates/header}}

<div style="margin-top: -30px; margin-bottom: 30px;">
    <div class="row" id="hero">
        
    </div>
    <div class="row" id="hero-content" style="display: flex;">
        <div style="align-self: flex-end;">
            <h1>{{video.snippet.title}}</h1>
            <h2>Ut tortor magna convallis sit amet vestibulum ac blandit vel sem</h2>
        </div>
    </div>
</div>

<div style="display: flex; flex-direction: row; justify-content: center; align-items: center;">
    <iframe
        id="ytplayer"
        type="text/html"
        style="width: 75%; height: 45vh; align-self: center;"
        src="https://www.youtube.com/embed/{{video.id}}?autoplay=0&cc_load_policy=1&modestbranding=1&controls=1&widget_referrer=https://tv.cloudcraft.fi&rel=0&playsinline=1"
        frameborder="0">
    </iframe>
</div>

<div style="display: flex; flex-direction: row; justify-content: center; align-items: center;">
    <div style="margin-top: 30px; width: 75%; display: flex; flex-direction: row; align-items: flex-start;">
        <span><i class="bi bi-clock"></i>{{video.contentDetails.duration}}</span>
        <span><i class="bi bi-calendar"></i>{{video.contentDetails.date}} {{video.contentDetails.time}}</span>
        <span><i class="bi bi-badge-cc"></i>{{video.contentDetails.caption}}</span>
    </div>
</div>

<style>
    #hero-content {
        height: 45vh;
    }
    #hero {
        height: 45vh;
        background: url("https://i.ytimg.com/vi/{{video.id}}/maxresdefault.jpg") 0 0 no-repeat;
        background-size: cover;
        background-position: center center;
        position: absolute;
        left: -1vw;
        width: 102vw;
        z-index: -1;
    }
    h1 {
        font-size: 3.5em;
        font-weight: 700;
    }
    h2 {
        font-weight: 600;
    }
